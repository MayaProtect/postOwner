apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongodeployment
  namespace: development
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mongo
      environment: development
  template:
    metadata:
      labels:
        app: mongo
        environment: development
    spec:
      containers:
      - name: mongo
        image: mongo:latest
        ports:
        - containerPort: 27017

---

apiVersion: v1
kind: Service
metadata:
  name: mongodevel
  namespace: development
spec:
  selector:
    app: mongo
    environment: development
  ports:
  - protocol: TCP
    port: 27017
    targetPort: 27017

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: metricsfaker
  namespace: development
spec:
  selector:
    matchLabels:
      app: metricsfaker
  replicas: 2
  template:
    metadata:
      labels:
        app: metricsfaker
    spec:
      containers:
        - name: metricsfaker
          image: pfontaine/metricsfaker:{{ commit_sha }}
          env:
            - name: MONGO_HOST
              value: mongodevel
            - name: MONGO_PORT
              value: "27017"
            - name: MONGO_DB
              value: mayaprotect
          imagePullPolicy: Always

---

apiVersion: v1
kind: Service
metadata:
  name: metricsfaker-service
  namespace: development
spec:
  selector:
    app: metricsfaker
  ports:
  - port: 8080
    targetPort: 8080
  type: ClusterIP
